<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = "com.example.a10518.calculator.calculator">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:inputType="none"
        android:enabled="false"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:hint="@string/hint_text" /><!--显示提示字-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cls"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="C"
                android:background="#ee82ee"
                android:textColor="#FFF"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="/"
                android:background="#ee82ee"
                android:textColor="#FFF"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Backspace"
                android:background="#ee82ee"
                android:textColor="#FFF"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"/>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="7"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="8"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="9"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="*"
            android:background="#ee82ee"
            android:textColor="#FFF"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="4"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="6"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="-"
            android:background="#ee82ee"
            android:textColor="#FFF"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="1"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="2"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="3"
            android:background="#FFF"
            android:textColor="#ee82ee"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="+"
            android:background="#ee82ee"
            android:textColor="#FFF"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="0"
                android:background="#FFF"
                android:textColor="#ee82ee"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="."
                android:background="#FFF"
                android:textColor="#ee82ee"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="="
                android:background="#ee82ee"
                android:textColor="#FFF"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>